{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_analysis/json_schemas/1.0/gmx_trjconv_trj",
    "title": "Converts between GROMACS compatible trajectory file formats and/or extracts a selection of atoms.",
    "type": "object",
    "required": [
        "input_traj_path",
        "output_traj_path"
    ],
    "properties": {
        "input_traj_path": {
            "type": "string",
            "description": "Path to the GROMACS trajectory file.",
            "enum": [
                ".*\\.xtc$",
                ".*\\.trr$",
                ".*\\.cpt$",
                ".*\\.gro$",
                ".*\\.g96$",
                ".*\\.pdb$",
                ".*\\.tng$"
            ]
        },
        "input_index_path": {
            "type": "string",
            "description": "Path to the GROMACS index file.",
            "enum": [
                ".*\\.ndx$"
            ]
        },
        "output_traj_path": {
            "type": "string",
            "description": "Path to the output file.",
            "enum": [
                ".*\\.xtc$",
                ".*\\.trr$",
                ".*\\.gro$",
                ".*\\.g96$",
                ".*\\.pdb$",
                ".*\\.tng$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "selection": {
                    "type": "string",
                    "default": "System",
                    "description": "Group where the trjconv will be performed. If **input_index_path** provided, check the file for the accepted values.",
                    "enum": [
                        "System",
                        "Protein",
                        "Protein-H",
                        "C-alpha",
                        "Backbone",
                        "MainChain",
                        "MainChain+Cb",
                        "MainChain+H",
                        "SideChain",
                        "SideChain-H",
                        "Prot-Masses",
                        "non-Protein",
                        "Water",
                        "SOL",
                        "non-Water",
                        "Ion",
                        "NA",
                        "CL",
                        "Water_and_ions"
                    ]
                },
                "start": {
                    "type": "number",
                    "default": 0,
                    "description": "Time of first frame to read from trajectory (default unit ps)."
                },
                "end": {
                    "type": "number",
                    "default": 0,
                    "description": "Time of last frame to read from trajectory (default unit ps)."
                },
                "dt": {
                    "type": "number",
                    "default": 0,
                    "description": "Only write frame when t MOD dt = first time (ps)."
                },
                "gmx_path": {
                    "type": "string",
                    "default": "gmx",
                    "description": "Path to the GROMACS executable binary."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                },
                "container_path": {
                    "type": "string",
                    "default": null,
                    "description": "Container path definition."
                },
                "container_image": {
                    "type": "string",
                    "default": "'gromacs/gromacs:latest'",
                    "description": "Container image definition."
                },
                "container_volume_path": {
                    "type": "string",
                    "default": "'/tmp'",
                    "description": "Container volume path definition."
                },
                "container_working_dir": {
                    "type": "string",
                    "default": null,
                    "description": "Container working directory definition."
                },
                "container_user_id": {
                    "type": "string",
                    "default": null,
                    "description": "Container user_id definition."
                },
                "container_shell_path": {
                    "type": "string",
                    "default": "'/bin/bash'",
                    "description": "Path to default shell inside the container."
                }
            }
        }
    },
    "additionalProperties": false
}